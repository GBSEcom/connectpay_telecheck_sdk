<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="@dimen/dash_dim"
    android:layout_height="wrap_content"
    android:weightSum="3">

    <!--android:background="@android:color/transparent"-->
    <RelativeLayout
        android:id="@+id/col_1_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/detail_bg_selector"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/btn_1"
            style="@style/dash_board_btn_style" />

        <ImageView
            android:id="@+id/img_view_1"
            style="@style/dash_board_img_style" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/col_2_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/detail_bg_selector"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/btn_2"
            style="@style/dash_board_btn_style" />

        <ImageView
            android:id="@+id/img_view_2"
            style="@style/dash_board_img_style" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/col_3_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/detail_bg_selector"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/btn_3"
            style="@style/dash_board_btn_style" />

        <ImageView
            android:id="@+id/img_view_3"
            style="@style/dash_board_img_style" />
    </RelativeLayout>
</TableRow>